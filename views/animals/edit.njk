{% extends 'layout.njk' %}

{% block content %}

  <div class="card">
      <section 
        class="avatar" 
        style="background: url('https://source.unsplash.com/collection/9718726/500x500') no-repeat center center / cover">
      </section>

      <section class="details">
        <form method="POST" action="/animals?_method=PUT">
          <h3>Edit Dog</h3>
          {% include 'animals/fields.njk' %}
          <input type="hidden" name="id" value="{{ animal.id }}">
        </form>
        
        <form method="post" action="/animals?_method=DELETE" id="form-delete">
          <input type="hidden" name="id" value="{{ animal.id }}">
          <button type="submit">Delete</button>
        </form>
      </section>
  </div>

{% endblock content %}
